{
  "name": "vcdrom",
  "displayName": "VCDrom",
  "version": "0.2.6",
  "description": "VCD viewer for VS Code",
  "main": "main.js",
  "browser": "main.js",
  "publisher": "drom",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": ["onLanguage:waveql", "onLanguage:vcd"],
  "contributes": {
    "customEditors": [
      {
        "viewType": "vcdrom.editor",
        "displayName": "VCDrom editor",
        "supportsMultipleEditorsPerDocument": true,
        "selector": [
          {
            "filenamePattern": "*.vcd"
          }
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {"command": "vcdrom.start", "when": "(resourceLangId == vcd)", "group": "navigation"},
        {"command": "vcdrom.addWaveQL", "when": "(resourceLangId == waveql)", "group": "navigation"},
        {"command": "vcdrom.addVCD", "when": "(resourceLangId == vcd)", "group": "navigation"},
        {"command": "vcdrom.addListing", "when": "(resourceLangId == lst)", "group": "navigation"}
      ]
    },
    "languages": [
      {"id": "vcd", "extensions": [".vcd"]},
      {"id": "waveql", "extensions": [".waveql"]},
      {"id": "lst", "extensions": [".lst"]}
    ],
    "commands": [
      {"command": "vcdrom.start", "title": "Open VCD in VCDrom"},
      {"command": "vcdrom.addWaveQL", "title": "select WaveQL for VCDrom"},
      {"command": "vcdrom.addVCD", "title": "select VCD for VCDrom"},
      {"command": "vcdrom.addListing", "title": "select Listing for VCDrom"}
    ]
  },
  "enabledApiProposals": ["extensionRuntime", "tunnels"],
  "files.associations": {
    "*.vcd": "vcd",
    "*.waveql": "waveql"
  },
  "scripts": {
    "test": "eslint main.js",
    "build": "mkdir -p app && cp node_modules/vcdrom/app/* app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavedrom/vscode-vcdrom.git"
  },
  "author": "WaveDrom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wavedrom/vscode-vcdrom/issues"
  },
  "homepage": "https://github.com/wavedrom/vscode-vcdrom#readme",
  "devDependencies": {
    "@drom/eslint-config": "^0.12.0",
    "@vscode/test-web": "^0.0.44",
    "eslint": "^8.45.0",
    "vcdrom": "^1.5.0"
  },
  "eslintConfig": {
    "extends": "@drom/eslint-config/eslint8/node12"
  }
}
